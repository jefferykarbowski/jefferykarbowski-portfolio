---

<section id="services" class="py-24 relative">
  <div class="section-divider absolute top-0 left-0 right-0"></div>

  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16 animate-on-scroll">
      <span class="text-accent text-sm font-semibold tracking-widest uppercase mb-4 block">What I Do</span>
      <h2 class="text-3xl sm:text-4xl font-bold text-white">
        Specialized in <span class="gradient-text">modern web engineering</span>
      </h2>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 stagger-children">
      {services.map((service) => (
        <div class="animate-on-scroll card-glow rounded-xl bg-navy-800/40 border border-slate-700/50 p-7">
          <div class="text-accent mb-4" set:html={service.icon} />
          <h3 class="text-lg font-semibold text-white mb-2">{service.title}</h3>
          <p class="text-slate-400 text-sm leading-relaxed">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
