<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Geometric background shapes -->
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <div
      class="hero-bg-shape w-[500px] h-[500px] -top-32 -right-32 bg-accent/[0.07]"
      style="animation: float-1 20s infinite;"
    ></div>
    <div
      class="hero-bg-shape w-[400px] h-[400px] top-1/2 -left-48 bg-violet-500/[0.05]"
      style="animation: float-2 25s infinite;"
